<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.potato.openpruszkow">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".OpenPruszkow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ParksActivity"
            android:label="@string/parks"
            android:parentActivityName="com.example.potato.openpruszkow.OpenPruszkow">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.potato.openpruszkow.OpenPruszkow" />
        </activity>
        <activity
            android:name=".PlacesForRunnersActivity"
            android:label="@string/pl_for_runners"
            android:parentActivityName="com.example.potato.openpruszkow.OpenPruszkow">
        <!-- Parent activity meta-data to support 4.0 and lower -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.potato.openpruszkow.OpenPruszkow" />
        </activity>
        <activity
            android:name=".GoForExercisesActivity"
            android:label="@string/exercises"
            android:parentActivityName="com.example.potato.openpruszkow.OpenPruszkow">
        <!-- Parent activity meta-data to support 4.0 and lower -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.potato.openpruszkow.OpenPruszkow" />
        </activity>
        <activity
            android:name=".EatFunActivity"
            android:label="@string/eat_fun"
            android:parentActivityName="com.example.potato.openpruszkow.OpenPruszkow">
        <!-- Parent activity meta-data to support 4.0 and lower -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.potato.openpruszkow.OpenPruszkow" />
        </activity>
        <activity
            android:name=".MorePicturesActivity"
            android:label="@string/more_pictures" />
    </application>

</manifest>